
<% if user_signed_in? %>

  <h1>Lista De Chocoamigos</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
       <!-- <th>User Id</th>-->
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td>
          <%= link_to friend.first_name + ' ' +  friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <!--<td><%= friend.user_id %></td>--> 
          <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-secondary btn-sm" %></td>
          <td><%= button_to 'Destroy', friend, method: :delete, 
                          data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm"  %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Chocoamigo', new_friend_path, class:"btn btn-dark" %>
